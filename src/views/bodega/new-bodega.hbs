<div class="containerInfo">
    <div class="container" style="margin-top: 8%;">
        <div class="row">
            <div class="col-10">
                <h2 class="text">Bodega</h2>
                <form action="/bodega/new-bodega" method="POST" class="needs-validation" novalidate>
                    <div class="form-row" style="margin-top: 5%;">
                        <div class="col-md-4 mb-3">
                            <label for="CodigoBodega">Código Bodega</label>
                            <input name="CodigoBodega" type="number" class="form-control" id="CodigoBodega" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="Nombre">Nombre</label>
                            <input name="Nombre" type="text" class="form-control" id="Nombre" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="NombreCorto">Nombre Corto</label>
                            <div class="input-group">
                                <input name="NombreCorto" type="text" class="form-control" id="NombreCorto"
                                    aria-describedby="inputGroupPrepend" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="Alias">Alias</label>
                            <input name="Alias" type="text" class="form-control" id="Alias" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="Ubicacion">Ubicación</label>
                            <input name="Ubicacion" type="text" class="form-control" id="Ubicacion" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="EspacioBodega">Espacio de Bodega</label>
                            <input name="EspacioBodega" type="number" class="form-control" id="EspacioBodega" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="UnidadMedida">Unidad de Medida</label>
                            <input name="UnidadMedida" type="text" class="form-control" id="UnidadMedida" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="TipoBodega">Tipo de Bodega</label>
                            <input name="TipoBodega" type="text" class="form-control" id="TipoBodega" required>
                        </div>
                    </div>
                    <button class="btn btn-primary" type="submit">Agregar</button>

                </form>

                <script>
                    function deleteBodega() {
                        document.getElementById("form-delete").submit();
                    }
                </script>

                <table class="table" style="margin-top: 10%;">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Código Bodega</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Nombre Corto</th>
                            <th scope="col">Alias</th>
                            <th scope="col">Ubicación</th>
                            <th scope="col">Espacio Bodega</th>
                            <th scope="col">Unidad de Medida</th>
                            <th scope="col">Tipo de Bodega</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each bodega}}
                        <tr>
                            <td>{{this.CodigoBodega}}</td>
                            <td>{{this.Nombre}}</td>
                            <td>{{this.NombreCorto}}</td>
                            <td>{{this.Alias}}</td>
                            <td>{{this.Ubicacion}}</td>
                            <td>{{this.EspacioBodega}}</td>
                            <td>{{this.UnidadMedida}}</td>
                            <td>{{this.TipoBodega}}</td>
                            <td class=" btn btn-warning button-form" type="submit"><a class="btn-edit"
                                    href="/bodega/edit/{{_id}}">Modificar</a></td>
                            <td class="btn btn-danger button-form"><a onclick='deleteBodega()'>Eliminar</a></td>
                            <form action="/bodega/delete/{{_id}}?_method=DELETE" method="POST"
                                enctype="application/x-www-form-urlencoded" id="form-delete">
                            </form>
                        </tr>
                        {{else}}
                    </tbody>
                </table>
                <div class="row">
                    <div class="card mx-auto">
                        <div class="card-body">
                            <h1>Hola {{user.name}}</h1>
                            <p clsss="lead">Aún no hay bodegas creadas</p>
                            <a class="btn btn-success btn-block">Crea Una!</a>
                        </div>
                    </div>
                    {{/each}}
                </div>
                <script>
                    // Example starter JavaScript for disabling form submissions if there are invalid fields
                    (function () {
                        'use strict';
                        window.addEventListener('load', function () {
                            // Fetch all the forms we want to apply custom Bootstrap validation styles to
                            var forms = document.getElementsByClassName('needs-validation');
                            // Loop over them and prevent submission
                            var validation = Array.prototype.filter.call(forms, function (form) {
                                form.addEventListener('submit', function (event) {
                                    if (form.checkValidity() === false) {
                                        event.preventDefault();
                                        event.stopPropagation();
                                    }
                                    form.classList.add('was-validated');
                                }, false);
                            });
                        }, false);
                    })();
                </script>
            </div>
        </div>
    </div>
</div>
</div>