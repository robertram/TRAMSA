<div class="containerInfo">
  <div class="container" style="margin-top: 8%;">
    <div class="row">
      <div class="col-10">
        <h2 class="text">Editar Bodega</h2>
        <form action="/bodega/edit-bodega/{{bodega._id}}?_method=PUT" method="POST" novalidate>
          <div class="form-row" style="margin-top: 5%;">
                        <div class="col-md-4 mb-3">
                            <label for="CodigoBodega">Código Bodega</label>
                            <input value="{{bodega.CodigoBodega}}" name="CodigoBodega" type="number" class="form-control" id="CodigoBodega" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="Nombre">Nombre</label>
                            <input value="{{bodega.Nombre}}" name="Nombre" type="text" class="form-control" id="Nombre" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="NombreCorto">Nombre Corto</label>
                            <div class="input-group">
                                <input value="{{bodega.NombreCorto}}" name="NombreCorto" type="text" class="form-control" id="NombreCorto"
                                    aria-describedby="inputGroupPrepend" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="Alias">Alias</label>
                            <input value="{{bodega.Alias}}" name="Alias" type="text" class="form-control" id="Alias" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="Ubicacion">Ubicación</label>
                            <input value="{{bodega.Ubicacion}}" name="Ubicacion" type="text" class="form-control" id="Ubicacion" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="EspacioBodega">Espacio de Bodega</label>
                            <input value="{{bodega.EspacioBodega}}" name="EspacioBodega" type="number" class="form-control" id="EspacioBodega" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="UnidadMedida">Unidad de Medida</label>
                            <input value="{{bodega.UnidadMedida}}" name="UnidadMedida" type="text" class="form-control" id="UnidadMedida" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="TipoBodega">Tipo de Bodega</label>
                            <input value="{{bodega.TipoBodega}}" name="TipoBodega" type="text" class="form-control" id="TipoBodega" required>
                        </div>
                    </div>
          <button class="btn btn-primary" type="submit">Editar</button>
        </form>
        <script>
          // Example starter JavaScript for disabling form submissions if there are invalid fields
          (function () {
            SetSelects();
            'use strict';
            window.addEventListener('load', function () {
              // Fetch all the forms we want to apply custom Bootstrap validation styles to
              var forms = document.getElementsByClassName('needs-validation');
              // Loop over them and prevent submission
              var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                  if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                  }
                  form.classList.add('was-validated');
                }, false);
              });
            }, false);
          })();
        </script>
      </div>
    </div>
  </div>
</div>
</div>