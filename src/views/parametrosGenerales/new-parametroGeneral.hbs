<div class="containerInfo">
    <div class="container" style="margin-top: 8%;">
        <div class="row">
            <div class="col-10">
                <h2 class="text">Parametros Generales</h2>
                <form action="/parametrosGenerales/new-parametroGeneral" method="POST" class="needs-validation"
                    novalidate>
                    <div class="form-row" style="margin-top: 5%;">
                        <div class="col-md-4 mb-3">
                            <label for="NombreCompania">Nombre de la Compañia</label>
                            <input name="NombreCompania" type="text" class="form-control" id="NombreCompania" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="Telefono">Telefono</label>
                            <input name="Telefono" type="number" class="form-control" id="Telefono" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="CedulaJuridica">Cedula Juridica</label>
                            <input name="CedulaJuridica" type="number" class="form-control" id="CedulaJuridica"
                                required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="MensajeSaludo">Mensaje Saludo</label>
                            <div class="input-group">
                                <input name="MensajeSaludo" type="text" class="form-control" id="MensajeSaludo"
                                    aria-describedby="inputGroupPrepend" required>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="DireccionEstablecimiento">Direccion del establecimiento</label>
                            <input name="DireccionEstablecimiento" type="text" class="form-control"
                                id="DireccionEstablecimiento" required>
                        </div>
                    </div>
                    <button class="btn btn-primary" type="submit">Agregar</button>

                    <script>
                        function deleteParametro() {
                            document.getElementById("form-delete").submit();
                        }
                    </script>

                    <table class="table" style="margin-top: 10%;">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">Nombre de la Compañia</th>
                                <th scope="col">Telefono</th>
                                <th scope="col">Cedula Juridica</th>
                                <th scope="col">Mensaje Saludo</th>
                                <th scope="col">Direccion del establecimiento</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each parametros}}
                            <tr>
                                <td>{{this.NombreCompania}}</td>
                                <td>{{this.Telefono}}</td>
                                <td>{{this.CedulaJuridica}}</td>
                                <td>{{this.MensajeSaludo}}</td>
                                <td>{{this.DireccionEstablecimiento}}</td>
                                <td type="submit"><button class="btn btn-warning" type="submit"><a
                                            class="undecorate" href="/parametros/edit/{{_id}}">Modificar</a></button></td>
                                <td><button class="btn btn-danger button-form" type="submit"
                                        onclick='deleteParametro()'>Eliminar</button></td>
                                <form action="/parametros/delete/{{_id}}?_method=DELETE" method="POST"
                                    enctype="application/x-www-form-urlencoded" id="form-delete">
                                </form>
                            </tr>
                            {{else}}
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="card mx-auto">
                            <div class="card-body">
                                <h1>Hola {{user.name}}</h1>
                                <p clsss="lead">Aún no hay parametros Generales registrados</p>
                                <a class="btn btn-success btn-block">Registra Uno!</a>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </form>
                <script>
                    // Example starter JavaScript for disabling form submissions if there are invalid fields
                    (function () {
                        'use strict';
                        window.addEventListener('load', function () {
                            // Fetch all the forms we want to apply custom Bootstrap validation styles to
                            var forms = document.getElementsByClassName('needs-validation');
                            // Loop over them and prevent submission
                            var validation = Array.prototype.filter.call(forms, function (form) {
                                form.addEventListener('submit', function (event) {
                                    if (form.checkValidity() === false) {
                                        event.preventDefault();
                                        event.stopPropagation();
                                    }
                                    form.classList.add('was-validated');
                                }, false);
                            });
                        }, false);
                    })();
                </script>
            </div>
        </div>
    </div>
    </main>
</div>