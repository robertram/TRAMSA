<div class="containerInfo">
    <div class="container" style="margin-top: 8%;">
        <div class="row">
            <div class="col-10">
                <h2 class="text">Clientes</h2>
                <form action="/clientes/new-cliente" method="POST" class="needs-validation"
                    novalidate>
                    <div class="form-row" style="margin-top: 5%;">
                        <div class="col-md-4 mb-3">
                            <label for="CodigoIdentificacion">Codigo Identificacion</label>
                            <input name="CodigoIdentificacion" type="number" class="form-control" id="NombreCompania" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="FechaIngreso">Fecha de Ingreso</label>
                            <input name="FechaIngreso" type="date" class="form-control" id="FechaIngreso" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="DocumentoDeIdentidad">Documento de Identidad</label>
                            <input name="DocumentoDeIdentidad" type="text" class="form-control" id="DocumentoDeIdentidad"
                                required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="PrimerApellido">Primer Apellido</label>
                            <div class="input-group">
                                <input name="PrimerApellido" type="text" class="form-control" id="PrimerApellido"
                                    aria-describedby="inputGroupPrepend" required>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="SegundoApellido">Segundo Apellido</label>
                            <input name="SegundoApellido" type="text" class="form-control"
                                id="SegundoApellido" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="Nombre">Nombre</label>
                            <input name="Nombre" type="text" class="form-control"
                                id="Nombre" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="Estado">Estado</label>
                            <div class="input-group">
                                <input name="Estado" type="text" class="form-control" id="Estado"
                                    aria-describedby="inputGroupPrepend" required>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="Telefono">Telefono</label>
                            <input name="Telefono" type="number" class="form-control"
                                id="Telefono" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="CorreoElectronico">Correo Electronico</label>
                            <input name="CorreoElectronico" type="text" class="form-control"
                                id="CorreoElectronico" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="Direccion">Direccion</label>
                            <div class="input-group">
                                <input name="Direccion" type="text" class="form-control" id="Direccion"
                                    aria-describedby="inputGroupPrepend" required>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-primary" type="submit">Agregar</button>

                    <script>
                        function eliminarCliente() {
                            console.log('1');
                            document.getElementById("form-delete").submit();
                            console.log('2');
                        }
                    </script>

                    <table class="table" style="margin-top: 10%;">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">Codigo de Identificacion</th>
                                <th scope="col">Fecha de Ingreso</th>
                                <th scope="col">Documento de Identidad</th>
                                <th scope="col">Primer Apellido</th>
                                <th scope="col">Segundo Apellido</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Estado</th>
                                <th scope="col">Telefono</th>
                                <th scope="col">Correo</th>
                                <th scope="col">Direccion</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each clientes}}
                            <tr>
                                <td>{{this.CodigoIdentificacion}}</td>
                                <td>{{this.FechaIngreso}}</td>
                                <td>{{this.DocumentoDeIdentidad}}</td>
                                <td>{{this.PrimerApellido}}</td>
                                <td>{{this.SegundoApellido}}</td>
                                <td>{{this.Nombre}}</td>
                                <td>{{this.Estado}}</td>
                                <td>{{this.Telefono}}</td>
                                <td>{{this.CorreoElectronico}}</td>
                                <td>{{this.Direccion}}</td>
                                <td type="submit"><button class="btn btn-warning" type="submit"><a
                                            href="/clientes/edit/{{_id}}">Modificar</a></button></td>
                                <td><button class="btn btn-danger button-form" type="submit"
                                        onclick='eliminarCliente()'>Eliminar</button></td>
                                <form action="/clientes/delete/{{_id}}?_method=DELETE" method="POST"
                                    enctype="application/x-www-form-urlencoded" id="form-delete">
                                </form>
                            </tr>
                            {{else}}
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="card mx-auto">
                            <div class="card-body">
                                <h1>Hola {{user.name}}</h1>
                                <p clsss="lead">AÃºn no hay Clientes registrados</p>
                                <a class="btn btn-success btn-block">Registra Uno!</a>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </form>
                <script>
                    // Example starter JavaScript for disabling form submissions if there are invalid fields
                    (function () {
                        'use strict';
                        window.addEventListener('load', function () {
                            // Fetch all the forms we want to apply custom Bootstrap validation styles to
                            var forms = document.getElementsByClassName('needs-validation');
                            // Loop over them and prevent submission
                            var validation = Array.prototype.filter.call(forms, function (form) {
                                form.addEventListener('submit', function (event) {
                                    if (form.checkValidity() === false) {
                                        event.preventDefault();
                                        event.stopPropagation();
                                    }
                                    form.classList.add('was-validated');
                                }, false);
                            });
                        }, false);
                    })();
                </script>
            </div>
        </div>
    </div>
    </main>
</div>