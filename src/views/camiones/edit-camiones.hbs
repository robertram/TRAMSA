<div class="containerInfo">
    <div class="container" style="margin-top: 8%;">
        <div class="row">
            <div class="col-10">
                <h2 class="text">Editar Camiones</h2>
                <form action="/camiones/edit-camiones/{{camiones._id}}?_method=PUT" method="POST" novalidate>
                    <div class="form-row" style="margin-top: 5%;">
                        <div class="col-md-4 mb-3">
                            <label for="Descripcion">Descripción</label>
                            <input value="{{camiones.Descripcion}}" name="Descripcion" type="text" class="form-control"
                                id="Descripcion" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="NombreCorto">Nombre Corto</label>
                            <div class="input-group">
                                <input value="{{camiones.NombreCorto}}" name="NombreCorto" type="text"
                                    class="form-control" id="NombreCorto" aria-describedby="inputGroupPrepend" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="Marca">Marca</label>
                            <input value="{{camiones.Marca}}" name="Marca" type="text" class="form-control" id="Marca"
                                required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="Anio">Año</label>
                            <input value="{{camiones.Anio}}" name="Anio" type="number" class="form-control" id="Anio"
                                required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="Placa">Placa</label>
                            <input value="{{camiones.Placa}}" name="Placa" type="text" class="form-control" id="Placa"
                                required>
                        </div>
                    </div>
                    <button class="btn btn-primary" type="submit">Editar</button>
                </form>
                <script>
                    // Example starter JavaScript for disabling form submissions if there are invalid fields
                    (function () {
                        SetSelects();
                        'use strict';
                        window.addEventListener('load', function () {
                            // Fetch all the forms we want to apply custom Bootstrap validation styles to
                            var forms = document.getElementsByClassName('needs-validation');
                            // Loop over them and prevent submission
                            var validation = Array.prototype.filter.call(forms, function (form) {
                                form.addEventListener('submit', function (event) {
                                    if (form.checkValidity() === false) {
                                        event.preventDefault();
                                        event.stopPropagation();
                                    }
                                    form.classList.add('was-validated');
                                }, false);
                            });
                        }, false);
                    })();
                </script>
            </div>
        </div>
    </div>
</div>
</div>