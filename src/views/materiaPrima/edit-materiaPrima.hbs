<div class="containerInfo">
  <div class="container" style="margin-top: 8%;">
    <div class="row">
      <div class="col-10">
        <h2 class="text">Editar Materia Prima</h2>
        <form action="/materiaPrima/edit-materiaPrima/{{materiaPrima._id}}?_method=PUT" method="POST" novalidate>
          <div class="form-row" style="margin-top: 5%;">
            <div class="col-md-4 mb-3">
              <label for="validationCustom02">Nombre</label>
              <input name="Nombre" type="text" class="form-control" id="validationCustom02"
                value="{{materiaPrima.Nombre}}" required>
            </div>
            <div class="col-md-4 mb-3">
              <label for="validationCustomUsername">Cantidad</label>
              <div class="input-group">
                <input name="CantidadExistente" type="number" class="form-control" id="validationCustomUsername"
                  aria-describedby="inputGroupPrepend" value="{{materiaPrima.CantidadExistente}}" required>
              </div>
            </div>
          </div>
          <div class="form-row">
            <label>
              Unidad de Medida
              <br>
              <select class="select" name="selectUM" id="selectUM">
                <option value="1">Metros</option>
                <option value="2">Metros c√∫bicos</option>
                <option value="3">Metros cuadrados</option>
                <option value="4">Litros</option>
                <option value="5">Mililitros</option>
              </select>
            </label>
          </div>
          <button class="btn btn-primary" type="submit">Editar</button>
        </form>
        <script>
          function SetSelects() {
            document.getElementById("selectUM").value = {{materiaPrima.UnidadDeMedida}};
          }
          // Example starter JavaScript for disabling form submissions if there are invalid fields
          (function () {
            SetSelects();
            'use strict';
            window.addEventListener('load', function () {
              // Fetch all the forms we want to apply custom Bootstrap validation styles to
              var forms = document.getElementsByClassName('needs-validation');
              // Loop over them and prevent submission
              var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                  if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                  }
                  form.classList.add('was-validated');
                }, false);
              });
            }, false);
          })();
        </script>
      </div>
    </div>
  </div>
</div>
</div>