<div class="containerInfo">
    <div class="container" style="margin-top: 8%;">
        <div class="row">
            <div class="col-10">
                <h2 class="text">Eventos</h2>
                <form action="/eventos/new-evento" method="POST" class="needs-validation" novalidate>
                    <div class="form-row" style="margin-top: 5%;">
                        <div class="col-md-4 mb-3">
                            <label for="Codigo">Codigo</label>
                            <input name="Codigo" type="number" class="form-control" id="Codigo" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="Descripcion">Descripcion</label>
                            <input name="Descripcion" type="text" class="form-control" id="Descripcion" required>
                        </div>
                    </div>
                    <button class="btn btn-primary" type="submit">Agregar</button>


                    <table class="table" style="margin-top: 10%;">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">Codigo</th>
                                <th scope="col">Descripcion</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each eventos}}
                            <tr>
                                <td> {{this.Codigo}}</td>
                                <td> {{this.Descripcion}}</td>
                                <td><button class="btn btn-warning"type="submit">Modificar</button></td>
                                <td><button class="btn btn-danger" type="submit">Eliminar</button></td>
                            </tr>
                            {{else}}
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="card mx-auto">
                            <div class="card-body">
                                <h1>Hola {{user.name}}</h1>
                                <p clsss="lead">AÃºn no hay eventos registrados</p>
                                <a href="/eventos/add" class="btn btn-success btn-block">Registra Uno!</a>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>