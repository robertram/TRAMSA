{{#each errores}}
{{/each}}
<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-4 text-center">
      <div class="card-header">
        <h1 class="h4">
          Cambiar Contraseña
        </h1>
      </div>
        <img class="rounded-circle mx-auto d-block logo m-4" src="/img/logo.png" alt="Logo">
      <div class="card-body">
        <form action="/users/changePassword/{{user._id}}?_method=PUT" method="POST" novalidate>
          <div class="form-group">
            <input type="password" class="form-control" name="oldPassword" placeholder="Contraseña actual" autofocus>
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Nueva contraseña">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="confirmedPassword" placeholder="Escriba de nuevo la nueva contraseña">
          </div>
          <button class="btn btn-primary btn-block">
            Cambiar Contraseña 
          </button>
        </form>
      </div>
    </div>
  </div>
</div>